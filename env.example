DJANGO_SECRET_KEY=change_me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=*

# Configuración de administradores (separados por comas)
# Formato: username:email:password
DJANGO_ADMINS=admin:admin@example.com:admin123,superuser:super@example.com:superpass

# Configuración legacy (se mantiene para compatibilidad)
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123

# Jitsi Configuration
JITSI_BASE_URL=https://meet.jitsi
JITSI_JWT_SECRET=JvbSecret
JITSI_APP_ID=django-jitsi
JITSI_DOMAIN=meet.jitsi
JITSI_AUTH_DOMAIN=auth.meet.jitsi
JITSI_GUEST_DOMAIN=guest.meet.jitsi
JITSI_MUC_DOMAIN=muc.meet.jitsi
JITSI_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi
JITSI_RECORDER_DOMAIN=recorder.meet.jitsi

# Jitsi Component Secrets
JICOFO_COMPONENT_SECRET=JvbSecret
JICOFO_AUTH_USER=focus
JICOFO_AUTH_PASSWORD=JvbSecret
JVB_AUTH_USER=jvb
JVB_AUTH_PASSWORD=JvbSecret
JIGASI_XMPP_USER=jigasi
JIGASI_XMPP_PASSWORD=JvbSecret
JIBRI_RECORDER_USER=recorder
JIBRI_RECORDER_PASSWORD=JvbSecret
JIBRI_XMPP_USER=jibri
JIBRI_XMPP_PASSWORD=JvbSecret

# Jitsi P2P Configuration
JVB_ENABLE_APIS=xmpp
JVB_TCP_HARVESTER_DISABLED=true
JVB_TCP_PORT=4443
JVB_TCP_MAPPED_PORT=4443
JVB_OCTO_BIND_ADDRESS=0.0.0.0
JVB_OCTO_PUBLIC_ADDRESS=localhost
JVB_STUN_SERVERS=stun.l.google.com:19302,stun1.l.google.com:19302

# Jitsi JWT Configuration
JWT_APP_ID=django-jitsi
JWT_APP_SECRET=JvbSecret
JWT_ACCEPTED_ISSUERS=django-jitsi
JWT_ACCEPTED_AUDIENCES=django-jitsi
JWT_ASAP_KEYSERVER=https://prosody.meet.jitsi/asap
JWT_ALLOW_EMPTY=0
JWT_AUTH_TYPE=token
JWT_TOKEN_AUTH_MODULE=token_verification

# TURN Server Configuration (opcional para P2P mejorado)
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=
TURN_REALM=

# P2P Configuration
P2P_ENABLED=true
P2P_STUN_ONLY=false
